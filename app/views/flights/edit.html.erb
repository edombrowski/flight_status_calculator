<!-- Validation failure messages -->

<% if @flight.errors.any? %>
  <% @flight.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Flight #<%= @flight.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_flight/<%= @flight.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @flight.user_id %>">
            </div>
          </div>

          <!-- Label and input for program_id -->
          <div class="form-group">
            <label for="program_id" class="col-sm-2 control-label">
              Program
            </label>
            <div class="col-sm-10">
              <input type="text" id="program_id" name="program_id" placeholder="Program" class="form-control" value="<%= @flight.program_id %>">
            </div>
          </div>

          <!-- Label and input for destination_airport_id -->
          <div class="form-group">
            <label for="destination_airport_id" class="col-sm-2 control-label">
              Destination airport
            </label>
            <div class="col-sm-10">
              <input type="text" id="destination_airport_id" name="destination_airport_id" placeholder="Destination airport" class="form-control" value="<%= @flight.destination_airport_id %>">
            </div>
          </div>

          <!-- Label and input for origin_airport_id -->
          <div class="form-group">
            <label for="origin_airport_id" class="col-sm-2 control-label">
              Origin airport
            </label>
            <div class="col-sm-10">
              <input type="text" id="origin_airport_id" name="origin_airport_id" placeholder="Origin airport" class="form-control" value="<%= @flight.origin_airport_id %>">
            </div>
          </div>

          <!-- Label and input for miles_flown -->
          <div class="form-group">
            <label for="miles_flown" class="col-sm-2 control-label">
              Miles flown
            </label>
            <div class="col-sm-10">
              <input type="text" id="miles_flown" name="miles_flown" placeholder="Miles flown" class="form-control" value="<%= @flight.miles_flown %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Flight
              </button>
              or
              <a href="/flights/<%= @flight.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
